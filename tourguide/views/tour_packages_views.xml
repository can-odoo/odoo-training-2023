<?xml version="1.0"?>
<odoo>

    <!-- tree record view -->
    <record id="tour_packages_list_view" model="ir.ui.view">
        <field name="name">tour.packages.list</field>
        <field name="model">tour.packages</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="duration"/>
                <field name="price"/>
            </tree>
        </field>
    </record>

    <!-- form record view -->
    <record id="tour_packages_form_view" model="ir.ui.view">
        <field name="name">tour.packages.form</field>
        <field name="model">tour.packages</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="duration"/>
                        </group>
                        <group>
                            <field name="price"/>
                            <field name="guide_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Itinerary">
                            <h4>
                                 <field name="desc"/>
                            </h4>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>