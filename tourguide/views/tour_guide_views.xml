<?xml version="1.0"?>
<odoo>

    <record id="tour_guide_action" model="ir.actions.act_window">
        <field name="name">Tours</field>
        <field name="res_model">tour.guide</field>
        <field name="view_mode">tree,form</field>
    </record>

     <!-- tour menus -->
    <menuitem id="tour_menu_root" name="Tour Guide">
        <menuitem id="menu_tour_guide" name="Tour">
            <menuitem id="menu_tour_guide_action" action="tour_guide_action"/>
        </menuitem>
    </menuitem>

    <!-- tree view -->
    <record id="tour_guide_list_view" model="ir.ui.view">
        <field name="name">tour.guide.list</field>
        <field name="model">tour.guide</field>
        <field name="arch" type="xml">
            <tree decoration-success="status == 'available'" decoration-danger="status == 'unavailable'">
                <field name="name"/>
                <field name="destination"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="price"/>
                <field name="status" invisible="1"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="tour_guide_form_view" model="ir.ui.view">
        <field name="name">tour.guide.form</field>
        <field name="model">tour.guide</field>
        <field name="arch" type="xml">
            <form string="Tours">
                <header>
                    <button type="action" 
                        name="%(booking_trigger_action)d" 
                        string="New Booking"
                        class="oe_highlight"
                        attrs="{'invisible': [('status', '=', 'unavailable')]}"/>
                </header>
                <sheet>
                    <h1>
                        <field name="name" placeholder="Enter Tour Name "/>
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field':'color'}" />
                    <div style="height:20px"/>
                    <group>
                        <group>
                            <field name="destination"/>
                            <field name="price"/>
                            <field name="status"/>
                            <!-- <field name="active"/> -->
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="guide_id"/>
                        </group>
                    </group>
                    <div style="height:20px"/>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                                <field name="tour_type"/>
                                <field name="duration"/>
                            </group>
                        </page>
                        <page string="Itinerary">
                            <field name="desc"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search view -->
    <record id="tour_guide_search_view" model="ir.ui.view">
        <field name="name">tour.guide.search</field>
        <field name="model">tour.guide</field>
        <field name="arch" type="xml">
            <search string="Tour">
                <field name="name" string="Tour Name"/>
                <!-- <field name="duration" string="Duration(km)"/>
                <field name="cost" string="Cost"/> -->
                <field name="destination" string="Destination"/>
                <!-- context -->
                <filter name="start_date" string="Start Date" context="{'group_by':'start_date'}"/>
            </search>
        </field>
    </record>

</odoo>