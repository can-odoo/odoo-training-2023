<odoo>
    <record id="tour_page" model="website.page">
        <field name="name">Tours page</field>
        <field name="website_published">True</field>
        <field name="url">/tours</field>
        <field name="type">qweb</field>
        <field name="key">theme_tutorial.services_page</field>
    </record>
    <!-- add a link to main menu -->
    <record id="tours_page_link" model="website.menu">
        <field name="name">Tours</field>
        <field name="page_id" ref="tour_page" />
        <field name="parent_id" ref="website.main_menu" />
        <field name="sequence" type="int">99</field>
    </record>
</odoo>