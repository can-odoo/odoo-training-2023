<?xml version="1.0"?>
<odoo>
    <record id="cardekho_action" model="ir.actions.act_window">
        <field name="name">Car Dekho</field>
        <field name="res_model">car.dekho.property</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'search_default_available':True, 'search_default_current':True}</field>
    </record>

    <!-- List View -->
    <record id="cardekho_lost_reason_view_tree" model="ir.ui.view">
        <field name="name">car.dekho.property</field>
        <field name="model">car.dekho.property</field>
        <field name="arch" type="xml">
            <tree string="Tests" decoration-success="state in ('offer_received','offer_accepted')" decoration-muted="state=='sold'" decoration-bf="state=='offer_accepted'">
                <header>
                    <button name="%(cardekho_wizard_action)d" type="action" string="Add offer"/>
                </header>
                <field name="car_name"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="car_code"/>
                <field name="car_property_id"/>
                <field name="license_number" optional="hide"/>
                <field name="booking_date_upto"/>
                <field name="car_price"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="cardekho_lost_reason_view_form" model="ir.ui.view">
        <field name="name">car.dekho.property</field>
        <field name="model">car.dekho.property</field>
        <field name="arch" type="xml">
            <form string="Test">
                <header>
                    <button name="car_sold" type="object" string="Sold" states="new, offer_accepted"/>
                    <button name="car_sold" type="object" string="Sold" states="offer_accepted" class="oe_highlight"/>
                    <button name="car_cancle" type="object" string="Cancle" states="new,offer_received,offer_accepted"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="car_name" placeholder="Enter Your CarName"/>
                        </h1>
                        <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}" placeholder="Select Tag"/>
                    </div>
                    <group>
                        <group>
                            <field name="car_property_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                        <group>
                            <field name="car_code"/>
                        </group>
                        <group>
                            <field name="license_number"/>
                        </group>
                        <group>
                            <field name="booking_date_upto"/>
                        </group>
                        <group>
                            <field name="car_price"/>
                        </group>
                        <group>
                            <field name="best_price"/>
                        </group>
                        <group>
                            <field name="selling_price"/>
                        </group>
                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="description"/>
                                </group>
                                <group>
                                    <field name="fuel_type"/>
                                </group>
                                <group>
                                    <field name="color"/>
                                </group>
                                <group>
                                    <field name="height"/>
                                </group>
                                <group>
                                    <field name="width"/>
                                </group>
                                <group>
                                    <field name="siting_capacity"/>
                                </group>
                                <group>
                                    <field name="fuel_consumption"/>
                                </group>
                                <group>
                                    <field name="t_area"/>
                                </group>
                                <group>
                                    <field name="engine_frequency"/>
                                </group>
                                <group>
                                    <field name="state"/>
                                </group>
                                <group>
                                    <field name="weight"/>
                                </group>
                            </page>
                            <page string="Car Offers">
                                <field name="offer_ids" attrs="{'readonly':[('state','in',['offer_accepted','sold','cancle'])]}"/>
                            </page>
                            <page string="Car Info">
                                <group>
                                    <group>
                                        <field name="user_id"/>
                                        <field name="buyer_id"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- For Search Here-->
    <record id="cardekho_search_reason_view_form" model="ir.ui.view">
        <field name="name">car.dekho.property</field>
        <field name="model">car.dekho.property</field>
        <field name="arch" type="xml">
            <search string="Test">
                <field name="car_name"/>
                <field name="car_property_id"/>
                <field name="state"/>
                <field name="engine_frequency"/>
                <field name="car_code"/>
                <field name="car_price"/>
                <field name="t_area" filter_domain="[('t_area','>=',self)]"/>
                <!-- group by and filter -->
                <separator/>
                <filter name="available" string="Available" domain="[('state','in',['new','offer_received'])]"/>
                <filter string="Fuel" name="inactive" domain="['|',('fuel_type', '=', 'petrol'),('fuel_type', '=', 'cng')]"/>
                <group expand="1" string="Group By">
                    <filter string="Car Code" name="provider" context="{'group_by':'car_code'}"/>
                    <!-- name is logical name used for inheritance hook -->
                </group>
            </search>
        </field>
    </record>
    <!-- kanban view -->
    <record id="cardekho_kanban_view" model="ir.ui.view">
        <field name="name">car.dekho.property.kanban</field>
        <field name="model">car.dekho.property</field>
        <field name="arch" type="xml">
            <kanban default_group_by="car_property_id" records_draggable="0">
                <field name='state'/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div>
                                <h2>
                                    <field name="car_name"/>
                                </h2>
                            </div>
                            <div>
                                    Expected Price : <field name="car_price"/>
                            </div>
                            <div t-if="record.state.raw_value == 'offer_received'">
                                    Best Price : <field name="best_price"/>
                            </div>
                            <div t-if="record.state.raw_value=='offer_accepted'">
                                    Selling Price : <field name="selling_price"/>
                            </div>
                            <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>