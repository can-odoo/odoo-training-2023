<?xml version="1.0"?>
    <odoo>
        <record id="cardekho_action" model="ir.actions.act_window">
            <field name="name">Car Dekho</field>
            <field name="res_model">car.dekho.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        
        <!-- List View -->
        <record id="cardekho_lost_reason_view_tree" model="ir.ui.view">
            <field name="name">car.dekho.property</field>
            <field name="model">car.dekho.property</field>
            <field name="arch" type="xml">
                <tree string="Tests">
                    <field name="car_name"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="car_code"/>
                    <field name="car_property_id"/>
                    <field name="license_number"/>
                    <field name="booking_date_upto"/>
                    <field name="car_price"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="cardekho_lost_reason_view_form" model="ir.ui.view">
            <field name="name">car.dekho.property</field>
            <field name="model">car.dekho.property</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="car_name" placeholder="Enter Your CarName"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" placeholder="Select Tag Here"/>
                        </div>
                        <group>
                            <group>
                                <field name="car_property_id" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="car_code"/>
                            </group>
                            <group>
                                <field name="license_number"/>
                            </group>
                            <group>
                                <field name="booking_date_upto"/>
                            </group>
                            <group>
                                <field name="car_price"/>
                            </group>
                            <group>
                                <field name="best_price"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description"/>
                                    </group>
                                    <group>
                                        <field name="fuel_type"/>
                                    </group>
                                    <group>
                                        <field name="color"/>
                                    </group>
                                    <group>
                                        <field name="siting_capacity"/>
                                    </group>
                                    <group>
                                        <field name="fuel_consumption"/>
                                    </group>
                                    <group>
                                        <field name="engine_frequency"/>
                                    </group>
                                    <group>
                                        <field name="state"/>
                                    </group>
                                </page>
                                <page string="Car Offers">
                                    <field name="offer_ids"/>
                                </page>
                                <page string="Car Info">
                                    <group>
                                        <group>
                                            <field name="user_id"/>
                                            <field name="buyer_id"/>
                                        </group>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- For Search Here-->
        <record id="cardekho_search_reason_view_form" model="ir.ui.view">
            <field name="name">car.dekho.property</field>
            <field name="model">car.dekho.property</field>
            <field name="arch" type="xml">
                <search string="Test">
                    <field name="car_name"/>
                    <field name="car_property_id"/>
                    <field name="state"/>
                    <field name="engine_frequency"/>
                    <field name="car_code"/>
                    <field name="car_price"/>
                    <!-- group by and filter -->
                    <separator/>
                        <filter string="Fuel" 
                                name="inactive" 
                                domain="['|',('fuel_type', '=', 'petrol'),('state', '=', 'cng')]"/>
                            <group expand="1" string="Group By">
                                <filter string="Car Code" name="provider" context="{'group_by':'car_code'}"/>
                                 <!-- name is logical name used for inheritance hook -->
                            </group>
                </search>
            </field>    
        </record>
    </odoo>