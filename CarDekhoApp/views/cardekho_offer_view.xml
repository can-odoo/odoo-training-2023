<?xml version="1.0" encoding="utf-8"?>
    <odoo>
        <record id="cardekho_offer_view_form" model="ir.ui.view">
            <field name="name">cardekho.property.offer</field>
            <field name="model">cardekho.property.offer</field>
            <field name="arch" type="xml">
                <form string="Car Offer" editable='1'>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                    </group>
                </form>
            </field>
        </record>
        <record id="cardekho_offer_view_tree" model="ir.ui.view">
            <field name="name">cardekho.property.offer</field>
            <field name="model">cardekho.property.offer</field>
            <field name="arch" type="xml">
                <tree string="Property Offers" editable="bottom" decoration-success="state=='accepted'" decoration-danger="state=='refused'">
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="validity"/>
                    <field name="date_deadline"/>
                    <button name="accept_state" type="object" icon="fa-check" attrs="{'invisible': [('state','!=', False)]}"/>
                    <button name="refused_state" type="object" icon="fa-close" attrs="{'invisible': [('state','!=', False)]}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record id="cardekho_property_offer_action" model="ir.actions.act_window">
            <field name="name">Car Offers</field>
            <field name="res_model">cardekho.property.offer</field>
            <field name="view_mode">tree,form</field>
        </record>
    </odoo>