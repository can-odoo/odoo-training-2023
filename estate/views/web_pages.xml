<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="index">
        <t t-call="website.layout">
            <t t-set="title">Property</t>
            <div class="form-row align-items-center">
                <div class="d-flex col-sm-3 my-1 mt-4">
                    <form method="GET" class="d-flex">
                        <label class="sr-only" for="input">Name</label>
                        <input style="margin-left:10px;" type="date" class="form-control"
                            id="inputdate" name="inputdate" />
                        <button style="width:70%; margin-left:5px;" type="submit"
                            class="btn btn-primary">Listed After</button>
                    </form>
                </div>
            </div>
            <div class="oe_structure">
                <div class="container">
                    <div class="row">
                        <t t-foreach="properties" t-as="property">
                            <div class="col-sm-4">
                                <div class="card mt-4" style="width: 18rem;">
                                    <img class="card-img-top" src="/estate/static/img/p1.jpg"
                                        alt="property1" />
                                    <div class="card-body">
                                        <a style="text-decoration : none;"
                                            t-attf-href="/estate/{{ slug(property) }}">
                                            <h5 class="card-title fw-bolder" t-field="property.name">
                                            </h5>
                                        </a>
                                        <span
                                            t-field="property.date_availability" />. </div>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </div>
            <div t-if="pager" class="mt-3 mb-2 d-flex justify-content-center">
                <t t-call="website.pager" />
            </div>
        </t>
    </template>

    <template id="property_page">
        <t t-call="website.layout">
            <t t-set="title">Property</t>
            <div class="oe_structure">
                <div class="container">
                    <t t-foreach="properties" t-as="property">
                        <div class="card mt-3 mb-3 shadow border mx-auto" style="width: 25rem;">
                            <img class="card-img-top" src="/estate/static/img/p1.jpg"
                                alt="property1" />
                            <ul class="list-group list-group-flush ">
                                <li class="list-group-item">
                                    <h4 class="card-title">
                                        <span t-field="property.name" />
                                    </h4>
                                </li>
                                <li class="list-group-item">
                                    <b>Postcode: </b>
                                    <span t-field="property.postcode" />
                                    <br />
                                </li>
                                <li class="list-group-item">
                                    <b>Selling Price: </b>
                                    <span t-field="property.selling_price" />
                                    <br />
                                </li>
                                <li class="list-group-item">
                                    <b>
                                        <span t-field="property.state" />
                                    </b>
                                </li>
                            </ul>
                        </div>
                    </t>
                </div>
            </div>
        </t>
    </template>
</odoo>