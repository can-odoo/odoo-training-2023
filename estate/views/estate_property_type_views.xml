<?xml version="1.0"?>
<odoo>

    <record id="estate_property_type_action" model="ir.actions.act_window">
        <field name="name">Estate Properties Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- property_types_menus -->
    <menuitem id="menu_estate_property_type" name="Settings" parent="estate_menu_root"/>
    <menuitem id="menu_estate_property_type_action" action="estate_property_type_action" parent="menu_estate_property_type"/>

    <!-- tree view -->
    <record id="estate_property_type_list_view" model="ir.ui.view">
        <field name="name">estate.proerty.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sequence" widget="handle"/>
            </tree>
        </field>
    </record>

    <!-- form view -->
    <record id="estate_property_type_form_view" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <notebook>
                        <page string="Properties">
                            <field name="property_ids">
                                <tree>
                                    <field name="name" string="Title"/>
                                    <field name="expected_price"/>
                                    <field name="state" string="Status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>