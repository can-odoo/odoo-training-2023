<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Search -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search property">

                <!-- Search -->
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area" filter_domain="[('living_area','>=',self)]"/>
                <field name="facades"/>
                <field name="property_type_id" />

                <!-- Filter -->
                <filter string="Available" name="available"
                    domain="['|', ('state','=','offer_received'),('state','=','new')]" />

                <!-- Group By -->
                <group expand="1">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel"  decoration-bf="state=='offer_accepted'" decoration-success="state in ['offer_accepted','offer_received']"  decoration-muted="state=='sold'">
                <field name="name" />
                <field name="property_type_id" />
                <field name="tag_ids" widget="many2many_tags"  options="{'color_field': 'color'}"/>
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />                
                <field name="date_availability" optional="True"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="test">
                <header>
                    <button name="action_sold" string="Sold" states="new,offer_received,offer_accepted" type="object"/>
                    <button name="action_cancel" string="Cancel" states="new,offer_received,offer_accepted" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold" />
                </header>
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                    <group>
                        <group>
                            <field name="state"/>
                            <field name="postcode" />
                            <field name="expected_price" />
                            <field name="property_type_id" options="{'no_create':True}" />
                        </group>
                        <group>
                            <field name="date_availability" />
                            <field name="best_offer"/>
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" attrs="{'invisible': [('garden', '=', False)]}" />
                                <field name="garden_orientation" attrs="{'invisible': [('garden', '=', False)]}"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesman" />
                                <field name="buyer" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" attrs="{'readonly':[('state','in',('offer_accepted','sold','canceled'))]}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Records -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property </field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available': True}</field>
    </record>

    <!-- Menu -->
    <!-- Root -->
    <menuitem id="estate_menu_root" name="Real Estate" />
    <!-- Advertisement menu-->
    <menuitem id="first_level_menu_advertisement" name="Advertisement" parent="estate_menu_root" />
    <menuitem id="estate_model_menu_action" action="estate_property_action" name="Property"
        parent="first_level_menu_advertisement" />
    <!-- Setting menu -->
    <menuitem id="first_level_menu_setting" name="Settings" parent="estate_menu_root" />

</odoo>