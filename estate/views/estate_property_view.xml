<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Search -->
    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="search property">

                <!-- Search -->
                <field name="name"></field>
                <field name="postcode"></field>
                <field name="expected_price"></field>
                <field name="bedrooms"></field>
                <field name="living_area"></field>
                <field name="facades"></field>
                <field name="property_type_id" />

                <!-- Filter -->
                <filter string="Available" name="state"
                    domain="[ '|',('state','=','new'),('state', '=', 'Offer_Recieved')]" />

                <!-- Group By -->
                <group expand="1">
                    <filter string="Postcode" name="postcode" context="{'group_by':'postcode'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- View -->
    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" />
                <field name="property_type_id" />
                <field name="postcode" />
                <field name="bedrooms" />
                <field name="living_area" />
                <field name="expected_price" />
                <field name="selling_price" />
                <field name="date_availability" />
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="test">
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <field name="tag_ids" widget="many2many_tags" />
                    <group>
                        <group>
                            <field name="postcode" />
                            <field name="expected_price" />
                            <field name="property_type_id" />
                        </group>
                        <group>
                            <field name="date_availability" />
                            <field name="selling_price" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description" />
                                <field name="bedrooms" />
                                <field name="living_area" />
                                <field name="facades" />
                                <field name="garage" />
                                <field name="garden" />
                                <field name="garden_area" />
                                <field name="garden_orientation" />
                            </group>
                        </page>
                        <page string="Other info">
                            <group>
                                <field name="salesman" />
                                <field name="buyer" />
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Records -->
    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Estate Property </field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <!-- Root -->
    <menuitem id="estate_menu_root" name="Real Estate" />
    <!-- Advertisement menu-->
    <menuitem id="first_level_menu_advertisement" name="Advertisement" parent="estate_menu_root" />
    <menuitem id="estate_model_menu_action" action="estate_property_action" name="Property"
        parent="first_level_menu_advertisement" />
    <!-- Setting menu -->
    <menuitem id="first_level_menu_setting" name="Settings" parent="estate_menu_root" />

</odoo>