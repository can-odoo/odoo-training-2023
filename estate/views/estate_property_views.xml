<?xml version="1.0"?>
    <odoo>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">RealState</field>
            <field name="res_model">estate.recurring.plan</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- List View -->
        <record id="estate_list_reason_view_tree" model="ir.ui.view">
            <field name="name">estate.recurring.plan</field>
            <field name="model">estate.recurring.plan</field>
            <field name="arch" type="xml">
                <tree string="Tests">
                    <field name="name"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="postalcode"/>
                    <field name="property_type_id"/>
                    <field name="state"/>
                    <field name="expected_price"/>
                    <field name="selling_price"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="estate_from_reason_view_form" model="ir.ui.view">
            <field name="name">estate.recurring.plan</field>
            <field name="model">estate.recurring.plan</field>
            <field name="arch" type="xml">
                <form string="Test">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                            <field name="tag_ids" widget="many2many_tags" placeholder="Select Tag"/>
                        </div>
                        <group>
                            <group>
                                <field name="property_type_id" options="{'no_create': True, 'no_edit': True}"/>
                            </group>
                            <group>
                                <field name="postalcode"/>
                            </group>
                            <group>
                                <field name="expected_price"/>
                            </group>
                            <group>
                                <field name="selling_price"/>
                            </group>
                            <group>
                                <field name="date_availability"/>
                            </group>
                            <notebook>
                                <page string="Description">
                                    <group>
                                        <field name="description" placeholder="Description Here"/>
                                    </group>
                                    <group>
                                        <field name="bedrooms"/>
                                    </group>
                                    <group>
                                        <field name="garden"/>
                                    </group>
                                    <group>
                                        <field name="facades"/>
                                    </group>
                                    <group>
                                        <field name="living_area"/>
                                    </group>
                                    <group>
                                        <field name="garage"/>
                                    </group>
                                    <group>
                                        <field name="garden_orientation"/>
                                    </group>
                                    <group>
                                        <field name="state"/>
                                    </group>
                                </page>
                                <page string="Offers">
                                    <field name="offer_ids"/>
                                </page>
                                <page string="Other Info">
                                    <group>
                                        <group>
                                            <field name="user_id"/>
                                            <field name="buyer_id"/>
                                        </group>
                                    </group>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search -->
        <record id="estate_search_reason_view_form" model="ir.ui.view">
            <field name="name">estate.recurring.plan</field>
            <field name="model">estate.recurring.plan</field>
            <field name="arch" type="xml">
                <search string="Test">
                    <field name="name"/>
                    <field name="property_type_id"/>
                    <field name="bedrooms" />
                    <field name="facades" />
                    <field name="postalcode"/>
                    <field name="expected_price"/>
                    <!-- group by and filter Tag -->
                    <separator/>
                        <filter string="State" 
                                name="inactive" 
                                domain="['|',('state', '=', 'new'),('state', '=', 'offer received')]"/>
                            <group expand="1" string="Group By">
                                <filter string="Postal Code" name="provider" context="{'group_by':'postalcode'}"/>
                                <!-- name in filter is logical name, use for inheritance hook -->
                            </group>
                </search>
            </field>    
        </record>
    </odoo>