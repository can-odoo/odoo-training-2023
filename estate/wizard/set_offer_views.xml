<?xml version="1.0"?>
<odoo>
    <record id="add_offer_form" model="ir.ui.view">
        <field name="name">set.offer.form</field>
        <field name="model">set.offer</field>
        <field name="arch" type="xml">
            <form string="Set Offer">
                <group>
                    <field name="price" />
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button string="Make Offer" type="object" name="action_to_make_offer"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="set_offer_action" model="ir.actions.act_window">
        <field name="name">Add Offer</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">set.offer</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>