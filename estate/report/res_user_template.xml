<odoo>
    <template id="report_res_user_offer">
        <t t-foreach="docs" t-as="user">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h1>Salesman : <t t-out="user.name"></t></h1>
                        <hr/>
                        <t t-set="property" t-value="user.mapped('property_ids')" />
                        <t t-foreach="property" t-as="prop">
                            <h5 t-esc="prop.name"></h5>
                            <div>
                                <strong>Expected Price: </strong>
                                <span t-field="prop.expected_price" />
                            </div>
                            <div>
                                <strong>Status: </strong>
                                <span t-field="prop.state" />
                            </div>

                            <t t-set="property" t-value="prop"></t>

                            <t t-call="estate.report_property_offers_table" />
                            <br/>
                        </t>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>