<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <!-- View -->
    <record id="franchise_product_tree" model="ir.ui.view">
        <field name="name">franchise.product.tree</field>
        <field name="model">franchise.product</field>
        <field name="arch" type="xml">
            <tree string="product list">
                <field name="name" />
                <field name="price" />
                <field name="categories" widget="many2many_tags" options="{'color_field': 'color'}" />
                <field name="availability" />
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="franchise_product_form" model="ir.ui.view">
        <field name="name">franchise.product.form</field>
        <field name="model">franchise.product</field>
        <field name="arch" type="xml">
            <form string="product form">
                <sheet>
                    <h1 style="margin-bottom:30px">
                        <field name="name" placeholder="Product Name" />
                    </h1>
                    <group>
                        <group>
                            <field name="description"></field>
                            <field name="categories" widget="many2many_tags" options="{'color_field': 'color'}" />
                        </group>
                        <group>
                            <field name="price" />
                            <field name="availability" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="franchise_product_action" model="ir.actions.act_window">
        <field name="name">Franchise Product</field>
        <field name="res_model">franchise.product</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>