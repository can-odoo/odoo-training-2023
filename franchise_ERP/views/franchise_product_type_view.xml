<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="franchise_product_type_list" model="ir.ui.view">
        <field name="name">Franchise Product Type List</field>
        <field name="model">franchise.product.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom" string="Type List">
                <field name="name" />
                <field name="color"/>
            </tree>
        </field>
    </record>
    
    <!-- Action -->
    <record id="franchise_product_type_action" model="ir.actions.act_window">
        <field name="name"> Product Type</field>
        <field name="res_model">franchise.product.type</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>