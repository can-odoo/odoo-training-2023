<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <!-- List -->
    <record id="franchise_property_tree" model="ir.ui.view">
        <field name="name">franchise.property.tree</field>
        <field name="model">franchise.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" />
                <field name="franchise_id" />
                <field name="franchise_owner" />
                <field name="location" />
                <field name="type_franchise" />
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="franchise_property_form" model="ir.ui.view">
        <field name="name">franchise.property.form</field>
        <field name="model">franchise.property</field>
        <field name="arch" type="xml">
            <form string="Franchise Property Form">
                <sheet>
                    <h1 style="margin-bottom:30px">
                        <field name="name"/>
                    </h1>
                        <group>
                            <group>
                                <field name="franchise_id"/>
                            </group>
                            <group>
                                <field name="franchise_owner"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <group>
                                    <field name="no_of_product"/>
                                    <field name="location"/>
                                    <field name="opening_date"/>
                                    <field name="total_sale"/>
                                    <field name="total_revanue"/>
                                    <field name="type_franchise"/>
                                    <field name="active"/>
                                </group>
                            </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search -->
    <record id="franchise_property_search" model="ir.ui.view">
        <field name="name">franchise.property.search</field>
        <field name="model">franchise.property</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="franchise_id"/>
                <field name="franchise_owner"/>
                <field name="location"/>

                <filter string="Available Now" name="active" domain="[('active','=',1)]"/>
                <separator></separator>
                <filter string = "India" name="location" domain="[('location','=','India')]"/>

                <filter string="location" name="location" context = "{'group_by':'location'}"/>
                <filter string="Firm" name="Firm" context = "{'group_by':'name'}"/>
                <filter string="franchise_id" name="franchise_id" context = "{'group_by':'franchise_id'}"/>
                
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="franchise_property_action" model="ir.actions.act_window">
        <field name="name">Franchise Property Action</field>
        <field name="res_model">franchise.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="franchise_menu_root" name="Franchise">
        <menuitem id="franchise_first_level_menu" name="Explore">
            <menuitem id="franchise_model_menu_action" action="franchise_property_action"
                name="Franchies" />
        </menuitem>
    </menuitem>
</odoo>